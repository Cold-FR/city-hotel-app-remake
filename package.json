{
  "name": "city-app",
  "version": "2.0.7",
  "productName": "HabboCity-V2",
  "description": "HabboCity: Créez votre avatar, décorez votre appartement ! Tchattez avec vos amis.",
  "homepage": "https://habbocity.me",
  "main": "app/app.js",
  "scripts": {
    "start": "electron ./app/app.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "author": {
    "name": "City Games",
    "email": "contact@habbocity.me"
  },
  "license": "ISC",
  "devDependencies": {
    "@electron-delta/builder": "^0.1.17",
    "@electron/notarize": "^1.2.4",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@electron-delta/updater": "github:Cold-FR/electron-delta-updater",
    "axios": "^1.6.0",
    "electron-context-menu": "^3.6.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.electron.CityAppV2",
    "afterAllArtifactBuild": ".electron-delta.js",
    "files": [
      "!build/SignHook.js",
      "app/**/*",
      "package.json",
      "icon.ico"
    ],
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Cold-FR",
        "repo": "city-hotel-app-remake"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "HabboCity",
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "artifactName": "HabboCity-V2-${version}.${ext}",
      "differentialPackage": true,
      "deleteAppDataOnUninstall": true
    },
    "afterSign": "build/SignHook.js",
    "mac": {
      "icon": "icon.png",
      "category": "public.games.social-networking",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements-mac.plist",
      "entitlementsInherit": "build/entitlements-mac.plist",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ],
      "category": "Network;Chat"
    }
  }
}
